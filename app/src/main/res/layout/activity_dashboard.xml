<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Zambezi Hospital"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="201dp"
        android:layout_marginTop="100dp"
        android:columnCount="2"
        android:rowCount="2">

        <!-- Patient Management Button -->

        <!-- Medical Records Button -->
        <Button
            android:id="@+id/btnPatientManagement"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#00796B"
            android:gravity="center"
            android:text="Patient Management"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnMedicalRecords"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#00796B"
            android:gravity="center"
            android:text="Medical Records"
            android:textColor="#FFFFFF" />

        <!-- Barcode Scanning Button -->
        <Button
            android:id="@+id/btnBarcodeScanning"
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#00796B"
            android:gravity="center"
            android:text="Barcode Scanning"
            android:textColor="#FFFFFF" />

        <!-- Settings Button -->
        <Button
            android:id="@+id/btnSettings"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#00796B"
            android:gravity="center"
            android:text="Settings"
            android:textColor="#FFFFFF" />
    </GridLayout>
</LinearLayout>
    <!--android:drawableTop="@drawable/ic_barcode"-->